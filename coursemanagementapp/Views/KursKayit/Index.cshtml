@model IEnumerable<KursKayitViewModel>


<h2>Kayıt Listesi</h2>
<br>
<a asp-action="Create" class="btn btn-primary">Kayıt Ekle</a>
<p>
<table class="table table-bordered">
   <thead>
    <tr>
        <th style="width: 150px;">@Html.DisplayNameFor(m => m.KayitId)</th>
        <th>@Html.DisplayNameFor(m => m.Ogrenci.AdSoyad)</th>
        <th>@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
        <th>@Html.DisplayNameFor(m => m.Ogretmen.AdSoyad)</th>
        <th style="width: 150px;">İşlem</th>
    </tr>
   </thead>
   <tbody>
    @foreach(var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem =>item.KayitId)</td>
            <td>@Html.DisplayFor(modelItem =>item.Ogrenci.AdSoyad)</td>
            <td>@Html.DisplayFor(modelItem =>item.Kurs.Baslik)</td>
            <td>@item.Ogretmen.AdSoyad</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.KayitId" class="btn btn-sm btn-primary">Düzenle</a>
                <a asp-action="Delete" asp-route-id="@item.KayitId" class="btn btn-sm btn-danger">Sil</a>
            </td>
        </tr>
    }
   </tbody>
</table>